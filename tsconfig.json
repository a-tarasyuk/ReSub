{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors":  true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noResolve": false,
    "strict": true,
    "module": "es2015",
    "target": "es5",
    "outDir": "dist-es2015",
    "jsx": "react",
    "lib": ["es2015", "es2016", "dom"]
  },

  "include": [
    "src/*"
  ],

  "exclude": [
      "dist-*",
      "dist",
      "node_modules"
  ]
}
